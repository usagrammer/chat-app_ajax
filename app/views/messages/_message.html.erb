<div class="message">
  <div class="message-user">
    <%= message.user.name %>
  </div>
  <div class="message-date">
    <%= l message.created_at%>
  </div>
</div>
<div class="lower-meesage">
  <div class="message-content">
    <%= message.content %>
    <%= image_tag message.image.variant(resize:'500x500'), class: 'MessageImage' if message.image.present?%>
  </div>
</div>
